{
    "manifest_version": 3,
    "name": "Video Stream Master",
    "description": "",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "static/js/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "content_security_policy": {
        "script-src": "self",
        "object-src": "self"
    }
}